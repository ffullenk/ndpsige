 <%= simple_form_for(@colaborador, :html => {:class=>"form-horizontal"}) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :nombre, label: "Nombre Completo" %>
              <%= f.input :telefono, label: "Teléfono" %>
              <%= f.input :email, label: "Email" %>
            </div>
            <div class="form-actions bg-silver">
              <%= link_to 'Atrás', :back, :class=>"btn"  %>
              <%= f.button :submit, "Enviar", :class=>"btn btn-primary" %>
            </div>
            
            <% end %>